{
  "manifest_version": 3,
  "name": "Prompt API Query Extension",
  "version": "1.0",
  "description": "Chrome extension that uses the experimental Prompt API to query Chrome's built-in language model",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
